<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zm.aidian.Mapper.TypeMapper">
 <select id="selectAllType" resultType="Types">
    select * from types
 </select>

    <select id="selectTypeById" resultType="Types">
        select * from types where id=#{id}
    </select>

    <insert id="addType" parameterType="Types">
        insert into types(id, typeName) values (#{id},#{typeName})
    </insert>

    <select id="updateType" parameterType="Types">
        update types
        set typeName=#{typeName}
        where id=#{id}
    </select>

    <select id="deleteTypeById" parameterType="Types">
        delete from types where id=#{id}
    </select>
</mapper>
