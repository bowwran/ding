<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zm.aidian.Mapper.UsersMapper">
    <select id="selectNameByPwd" resultType="Users">
        select * from users where name=#{name} and pwd=#{pwd}
    </select>

    <select id="updateUser" parameterType="Users">
        update users
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="pwd != null and pwd != ''">
                pwd = #{pwd},
            </if>
            <if test="realname != null and realname != ''">
                realname = #{realname},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="card != null and card != ''">
                card = #{card},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
        </set>
        where id=#{id};
    </select>

    <select id="queryByName" resultType="Users">
        select * from users where name=#{name}
    </select>
    <select id="queryById" resultType="Users">
        select * from users where id=#{id}
    </select>

    <select id="queryIdByName" resultType="int">
        select id from users where name=#{name}
    </select>

    <select id="addUser" parameterType="Users">
        insert into users(name, pwd, realname, sex, age, card, address, phone, email, code)
        values(#{name}, #{pwd}, #{realname}, #{sex}, #{age}, #{card}, #{address}, #{phone}, #{email}, #{code})
    </select>
</mapper>
