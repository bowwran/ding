<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zm.aidian.Mapper.AdminMapper">
    <select id="selectNameByPwd" resultType="Admin">
        select * from admin where name=#{name} and pwd=#{pwd}
    </select>

    <select id="updateAdminPwd" parameterType="Admin">
        update admin
       <set>
           <if test="name!=null and name!=''">
               name=#{name},
           </if>
           <if test="pwd!=null and pwd!=''">
               pwd=#{pwd}
           </if>
       </set>
        where id=#{id};
    </select>

    <select id="queryByName" resultType="Admin">
        select * from admin where name=#{name}
    </select>

    <select id="addAdmin" parameterType="Admin">
        insert into admin(name, pwd) values (#{name},#{pwd})
    </select>
</mapper>
